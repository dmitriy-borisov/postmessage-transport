{
  "name": "postmessage-transport",
  "version": "1.0.0-alpha.1",
  "description": "async/await transport between tabs and iframes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitriy-borisov/postmessage-transport.git"
  },
  "homepage": "https://github.com/dmitriy-borisov/postmessage-transport",
  "author": {
    "name": "Dmitriy Borisov",
    "url": "https://github.com/dmitriy-borisov"
  },
  "keywords": [
    "postmessage",
    "transport",
    "emitter",
    "messagechannel",
    "broadcastchannel",
    "synchronization"
  ],
  "files": [
    "dist"
  ],
  "types": "./dist/lib.d.ts",
  "main": "./dist/lib.js",
  "module": "./dist/lib.mjs",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.mjs",
      "require": "./dist/lib.js"
    }
  },
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "tsup src/lib.ts --dts --format cjs,esm --clean",
    "build:browser": "tsup src/browser.ts --format cjs,esm",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest --dir tests",
    "test:ci": "vitest run --dir tests"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-unused-imports": "4.3.0",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}