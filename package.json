{
  "name": "postmessage-transport",
  "version": "1.0.0-rc.1",
  "description": "Strongly typed, promise-based PostMessage transport for communication between windows, iframes, and workers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitriy-borisov/postmessage-transport.git"
  },
  "homepage": "https://github.com/dmitriy-borisov/postmessage-transport",
  "author": {
    "name": "Dmitriy Borisov",
    "url": "https://github.com/dmitriy-borisov"
  },
  "keywords": [
    "postmessage",
    "transport",
    "emitter",
    "typescript",
    "typed",
    "promise",
    "async",
    "await",
    "iframe",
    "worker",
    "window",
    "cross-origin",
    "communication"
  ],
  "files": [
    "dist"
  ],
  "types": "./dist/lib.d.ts",
  "main": "./dist/lib.js",
  "module": "./dist/lib.mjs",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.mjs",
      "require": "./dist/lib.js"
    }
  },
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "tsup src/lib.ts --dts --format cjs,esm --clean",
    "build:browser": "tsup src/browser.ts --format cjs,esm",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest --dir tests",
    "test:ci": "vitest run --dir tests"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "@vitest/browser-playwright": "4.0.15",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-unused-imports": "4.3.0",
    "globals": "16.5.0",
    "playwright": "1.57.0",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@10.24.0"
}